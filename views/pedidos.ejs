<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <title>Pedidos</title>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-2" style="width: 250px;">
                <img src="https://fv9-4.failiem.lv/thumb_show.php?i=ystzd9sjg&view" class="img-thumbnail" alt="logo">
            </div>
            <div class="col-auto" id="titulo">
                <h1>Pedidos</h1>
            </div>
        </div>
    </div>


    <div class="container" id="lista clientes">
        <div class="row align-items-start">
            <div class="col">
                <form class="row gy-2 gx-3 align-items-center">
                    <div class="col-auto">
                      <label class="visually-hidden" for="empresa">Empresa</label>
                      <input type="text" class="form-control" id="Id" placeholder="Nombre Empresa">
                    </div>
                    <div class="col-auto">
                      <label class="visually-hidden" for="autoSizingInputGroup">Detalle</label>
                      <div class="input-group">
                        <input type="text" class="form-control" id="detalle" placeholder="Detalle">
                      </div>
                    </div><div class="col-auto">
                        <label class="visually-hidden" for="autoSizingInputGroup">Deuda</label>
                        <input type="date" value="2017-06-01" id="fecha" placeholder="Fecha"/>
                    </div>
                    <div class="col-auto">
                      <button type="submit" class="btn btn-success">Aceptar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<div class="container">
    <table class="table align-middle">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Empresa</th>
            <th scope="col">Detalle</th>
            <th scope="col">Fecha</th>
            <th scope="col">Acción</th>
          </tr>
        </thead>
            <tbody>
              <% results.forEach(function (pedidos) { %>
                <tr>
                  <td><%= pedidos.id_pedidos %></td>
                  <td><%= pedidos.empresa_pedidos %></td>
                  <td><%= pedidos.detalle_pedidos %></td>
                  <td><%= pedidos.fecha_pedidos %></td>
                  <td>
                    <a href="/edit" class="btn btn-outline-success btn-sm">Editar</a>
                    <a href="/delete" class="btn btn-outline-danger btn-sm">Borrar</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>   
      </table>
    </div>
    <div class="container">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a href="http://localhost:3000" class="btn btn-primary">Volver al menú</a>
      </div>
    </div>
</body>
</html>
